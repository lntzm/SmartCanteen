/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: normal;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 256rpx;
  height: 256rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 150px;
}
.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 360rpx;
  height: 280rpx;
}

.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}
.container_index {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: top;
  align-items: center;
  justify-content: space-between;
  padding: 5rpx;
  box-sizing: border-box;
} 
.view1{
  border: 3rpx solid #00771e;
  border-width: 10px;
  border-radius: 10rpx;
  border: 3rpx solid #009b27;
  height: 200px;
  width: 95%;
  vertical-align: top;
  padding: 10rpx;
  margin-bottom: 10px;
  margin-top: 15px;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
}
.view2{
  border: 3rpx solid #009b27;
  border-width: 10px;
  border-radius: 10rpx;
  border: 3rpx solid #009b27;
  height: 100px;
  width: 95%;
  vertical-align: top;
  padding: 10rpx;
  margin-bottom: 10px;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
}
.view3
{
  flex-direction: row;
}
.view4{
  border: 3rpx solid #009b27;
  border-width: 10px;
  border-radius: 10rpx;
  border: 3rpx solid #009b27;
  height: 250px;
  width: 95%;
  vertical-align: top;
  padding: 10rpx;
  margin-bottom: 10px;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
}
.index-text
{
  color: #535353;
  font-size: 35rpx;
}
.bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
}
.table {
  border: 0px solid darkgray;
 }
 .tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
 }
 .td {
  width:33%;
  font-size: 35rpx;
  justify-content: center;
  text-align: center;
 }
 .bg-w{
  background: snow;
 }
 .bg-g{
  background: #E6F3F9;
 }
 .th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
 }
 .td2 {
  width:40%;
  justify-content: center;
  text-align: center;
  background-color: #a1ddff;
 }