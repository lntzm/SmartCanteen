page{
  height: 100%;
  overflow: hidden;
}
.date-select {
display: -webkit-box;
display: -webkit-flex;
display: flex;
font-size: 28rpx;
padding: 20rpx;
}

.picker-date {
color: #10aeff;
}

.history-bill-table-title {
display: -webkit-box;
display: -webkit-flex;
display: flex;
color: #10aeff;
text-align: center;
padding: 10rpx;
}

.history-bill-list {
display: -webkit-box;
display: -webkit-flex;
display: flex;
text-align: center;
border-bottom: 1rpx solid #ddd;
height: 100rpx;
line-height: 100rpx;
}
.scroll-list{
  padding-bottom: 50rpx;
  height: 100%;
  box-sizing: border-box;


}
.spend-way-icon{
width: 64rpx;
height: 64rpx;
}
.item-remarks{
flex: 1;
text-overflow: ellipsis;
padding-left: 10rpx;
white-space:nowrap; 
box-sizing: border-box;
max-width: 130rpx;
overflow: hidden;
}

.view-scroll{
flex:1 1 auto;
height:100%;
overflow-y: scroll;
}